{
  "manifest_version": 3,
  "name": "Engify - Visual Debugger (Simple)",
  "version": "1.0.0",
  "description": "Simple test version - Click UI elements to find source",
  "permissions": [
    "activeTab",
    "scripting",
    "tabCapture"
  ],
  "background": {
    "service_worker": "background-v2.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["overlay.js", "content-enhanced.js"]
    }
  ],
  "action": {
    "default_title": "Engify - Visual Bug Reporter"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}
