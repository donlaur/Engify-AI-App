# Copy this file to .env.local and fill in your values

# MongoDB Atlas (Required for authentication)
# Get from: https://cloud.mongodb.com
# Format: mongodb+srv://username:password@cluster.mongodb.net/engify?retryWrites=true&w=majority
MONGODB_URI="mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/engify?retryWrites=true&w=majority"

# NextAuth (Required for authentication)
# Generate secret with: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3005"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32-at-least-32-characters"

# App Configuration
NEXT_PUBLIC_APP_NAME="Engify.ai"
NEXT_PUBLIC_APP_URL="http://localhost:3005"
NODE_ENV="development"

# Optional: AI Provider API Keys (for future features)
# OPENAI_API_KEY="sk-..."
# ANTHROPIC_API_KEY="sk-ant-..."
# GOOGLE_API_KEY="..."

# Optional: OAuth Providers (for future features)
# GOOGLE_CLIENT_ID="..."
# GOOGLE_CLIENT_SECRET="..."
